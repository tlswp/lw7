{
  "name": "npm-automation-env",
  "version": "1.0.9",
  "description": "",
  "main": "index.js",
  "watch": {
    "validate-html": {
      "patterns": [
        "src"
      ],
      "extensions": "html",
      "quiet": true,
      "legacyWatch": true
    },
    "validate-css": "src/style.css",
    "jshint": "src/"
  },
  "scripts": {
    "server": "live-server src",
    "validate-html": "html-validate src",
    "validate-css": "css-validator src/style.css",
    "jshint": "jshint src/",
    "watch": "npm-watch",
    "dev-mode": "npm-run-all --parallel server watch",
    "postinstall": "npm i -g live-server css-validator html-validate jshint",
    "build": "webpack --mode production"
  },
  "author": "Kalagin Ivan",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.7.4",
    "@babel/preset-env": "^7.7.4",
    "babel-loader": "^8.0.6",
    "cssnano": "^4.1.10",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "mini-css-extract-plugin": "^0.8.0",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.6.0",
    "path": "^0.12.7",
    "postcss-loader": "^3.0.0",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10"
  },
  "dependencies": {
    "css-loader": "^3.2.0",
    "style-loader": "^1.0.0"
  }
}
